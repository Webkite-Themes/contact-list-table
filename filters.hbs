<div class="webkite-applied-filters">
    <a class="webkite-toggle" href="#{{this.id}}" data-id="{{this.id}}" data-target=".filter-menu">filters<i></i></a>
    <ul class="filter-menu webkite-hide webkite-menu">
      {{#each filterableFacets type="enum"}}
      <li><a href="#">{{name}}</a>
        <ul class="filter-menu-child">
          {{#each values}}
          <li><a href="#" class="webkite-add-filter webkite-toggle" data-target=".filter-menu" data-facet="{{../name}}" data-operator="is" data-value="{{this}}">{{this}}</a></li>
          {{/each}}
        </ul>
      </li>
      {{/each}}
    </ul>
  <div class="current-filters">
  {{#each filterGroups}}
  <div class="filter-group-{{@index}}">
    {{#each filters}}
      <a href="#" class="webkite-remove-filter" data-facet="{{this.facet}}" data-operator="{{this.operator}}" data-value="{{this.value}}">{{this.value}}</a>{{#unless @last}}<span>or</span>{{/unless}}
    {{/each}}      
  </div>
  {{#unless @last}}<span>&</span>{{/unless}}
{{/each}}
  <a href="#" class="webkite-clear-filters"></a>
  </div>
</div>
