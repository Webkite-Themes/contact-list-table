          {{/each}}
          </span>
          {{else}}
          {{displayValue}}
          {{/if}}
          {{/facet}}
        </li>
        <li>
          <b>year of graduation</b>
          {{#facet name="Year of Graduation"}}
          <span class="facet-values">
          {{displayValue}}
          </span>
          {{/facet}}
        </li>
        <li>
          <b>employer</b>
          {{#facet name="Employer"}}
          {{#if filterable}}
          <span class="facet-values">
          {{#each values}}
